{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["@types/chrome", "vite/client"],
        "importHelpers": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "./include/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.vue",
    ]
}
