{
    "manifest_version": 3,
    "name": "NYCU Cos Search",
    "permissions": [
        "webRequest",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://cos.nycu.edu.tw/*"
    ],
    "action": {
        "default_title": "Vue Popup"
    },
    "background": {
        "matches": ["https://cos.nycu.edu.tw/*"],
        "service_worker": "background.ts"
    },
    "content_scripts": [
        {
            "matches": ["https://cos.nycu.edu.tw/*"],
            "js": ["content-scripts.ts"]
        }
    ]
}
